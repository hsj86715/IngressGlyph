<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/page_horizontal_padding"
    android:paddingRight="@dimen/page_horizontal_padding"
    android:paddingTop="@dimen/page_vertical_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/learn_glyph_size">

        <com.hsj86715.ingress.glyphres.view.IngressGlyphView
            android:id="@+id/learn_glyph_view"
            android:layout_width="@dimen/learn_glyph_size"
            android:layout_height="@dimen/learn_glyph_size" />

        <TextView
            android:id="@+id/learn_glyph_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_toRightOf="@id/learn_glyph_view"
            android:text="@string/learn_glyph_name"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/learn_glyph_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/learn_glyph_name"
            android:layout_below="@id/learn_glyph_name"
            android:layout_marginTop="2dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@android:color/holo_red_light"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/learn_glyph_alisa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/learn_glyph_name_text"
            android:layout_below="@id/learn_glyph_name_text"
            android:layout_marginTop="4dp"
            android:text="@string/learn_glyph_alisa"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/learn_glyph_alisa_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/learn_glyph_alisa"
            android:layout_below="@id/learn_glyph_alisa"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:textColor="@android:color/darker_gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/learn_glyph_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/learn_glyph_alisa_text"
            android:layout_below="@id/learn_glyph_alisa_text"
            android:layout_marginTop="4dp"
            android:text="@string/learn_glyph_cat"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/learn_glyph_cat_text"
