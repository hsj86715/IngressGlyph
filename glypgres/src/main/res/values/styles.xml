<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="StartTheme" parent="@android:style/Theme.Holo.Light.NoActionBar">
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="categoryRBStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/category_text_color_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:background">@drawable/category_rb_bg</item>
    </style>

    <style name="cheat_row_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/cheat_row_height</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cheat_row_head_style" parent="cheat_row_style">
        <item name="android:background">#045944</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="cheat_col_divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">@dimen/cheat_row_height</item>
        <item name="android:background">#F5F5F5</item>
    </style>

</resources>
