<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/cheat_multi_hack_header"
        style="@style/cheat_row_head_style"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="Multi-hack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cheat_row_height"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            style="@style/cheat_row_style"
            android:text="Type" />

        <View style="@style/cheat_col_divider" />

        <TextView
            style="@style/cheat_row_style"
            android:text="Hacks" />

        <View style="@style/cheat_col_divider" />

        <TextView
            style="@style/cheat_row_style"
            android:text="Hacks(after first)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cheat_row_height"
        android:background="#D3F3E2"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            style="@style/cheat_row_style"
            android:text="Common"
            android:textColor="#35975B" />

        <View style="@style/cheat_col_divider" />

        <TextView
            style="@style/cheat_row_style"
            android:text="+4" />

        <View style="@style/cheat_col_divider" />

        <TextView
            style="@style/cheat_row_style"
            android:text="+2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cheat_row_height"
        android:background="#EDE6FD"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            style="@style/cheat_row_style"
            android:text="Rare"
            android:textColor="#613BF1" />

        <View style="@style/cheat_col_divider" />

        <TextView
            style="@style/cheat_row_style"
            android:text="+8" />

        <View style="@style/cheat_col_divider" />

        <TextView
            style="@style/cheat_row_style"
            android:text="+4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/cheat_row_height"
        android:background="#FCE6F9"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            style="@style/cheat_row_style"
            android:text="Very Rare"
            android:textColor="#FE50BF" />

        <View style="@style/cheat_col_divider" />

        <TextView
            style="@style/cheat_row_style"
            android:text="+12" />

        <View style="@style/cheat_col_divider" />

        <TextView
            style="@style/cheat_row_style"
            android:text="+6" />
    </LinearLayout>

    <TextView
        style="@style/cheat_row_style"
        android:layout_width="match_parent"
        android:text="VR,R,C: 4 + 12 + 4 + 2 = 22" />
</merge>